<?xml version="1.0" encoding="utf-8"?>
<ScrollView>
    <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:bind="https://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="15dp">
    
        <android.support.design.card.MaterialCardView
          app:strokeColor="#FF0000"
          app:strokeWidth="1dp"
          android:id="@+id/cardAvatarPlaceholder"
          android:layout_width="72dp"
          android:layout_height="72dp"
          app:cardCornerRadius="36dp"
          android:layout_centerHorizontal="true">
    
          <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>
    
        </android.support.design.card.MaterialCardView>
    
        <TextView
          android:id="@+id/txtRealName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_below="@id/cardAvatarPlaceholder"
          android:layout_centerHorizontal="true"
          android:text="Ivan Biljan"
          android:textStyle="bold"/>
    
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="25dp"
            android:layout_below="@id/txtRealName"
            android:layout_centerHorizontal="true"
            android:text="\@ivanbiljan"/>
    
        <LinearLayout
            android:id="@+id/layoutFollowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/txtUsername">
    
          <TextView
            android:id="@+id/txtFollowersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="200"/>
    
          <TextView
            android:id="@+id/txtFollowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"/>
    
        </LinearLayout>
    
        <android.support.design.card.MaterialCardView
          android:layout_width="10dp"
          android:layout_height="10dp"
          android:layout_marginTop="10dp"
          app:strokeColor="#000000"
          app:strokeWidth="1dp"
          android:layout_below="@id/txtUsername"
          android:layout_centerHorizontal="true"
          app:cardCornerRadius="5dp"/>
    
        <LinearLayout
          android:id="@+id/layoutFollowing"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginTop="1dp"
          android:layout_marginRight="25dp"
          android:layout_alignParentEnd="true"
          android:layout_below="@id/txtUsername">
    
          <TextView
            android:id="@+id/txtFollowingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="100"/>
    
          <TextView
            android:id="@+id/txtFollowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"/>
    
        </LinearLayout>
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutFollowers"/>
    
      </RelativeLayout>
    
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          android:paddingLeft="15dp"
          android:paddingRight="15dp">
    
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:layout_weight="1"
          android:textSize="14dp"
          android:text="📚Repositories"/>
    
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:textSize="14dp"
          android:text="☆Stars"/>
    
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:textSize="14dp"
          android:text="🏢Organizations"/>
    
      </LinearLayout>
    
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="15dp"
          android:orientation="vertical">
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="📌Pinned"/>
    
        <HorizontalScrollView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="30dp">
    
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">
    
            <android.support.design.card.MaterialCardView
              app:strokeColor="#FF0000"
              app:strokeWidth="1dp"
              android:layout_width="144dp"
              android:layout_height="72dp"
              android:layout_marginRight="5dp"
              app:cardCornerRadius="8dp"
              android:layout_centerHorizontal="true">
    
            </android.support.design.card.MaterialCardView>
    
            <android.support.design.card.MaterialCardView
              app:strokeColor="#FF0000"
              app:strokeWidth="1dp"
              android:layout_width="144dp"
              android:layout_height="72dp"
              android:layout_marginRight="5dp"
              app:cardCornerRadius="8dp"
              android:layout_centerHorizontal="true">
    
            </android.support.design.card.MaterialCardView>
    
            <android.support.design.card.MaterialCardView
              app:strokeColor="#FF0000"
              app:strokeWidth="1dp"
              android:layout_width="144dp"
              android:layout_height="72dp"
              android:layout_marginRight="5dp"
              app:cardCornerRadius="8dp"
              android:layout_centerHorizontal="true">
    
            </android.support.design.card.MaterialCardView>
    
            <android.support.design.card.MaterialCardView
              app:strokeColor="#FF0000"
              app:strokeWidth="1dp"
              android:layout_width="144dp"
              android:layout_height="72dp"
              android:layout_marginRight="5dp"
              app:cardCornerRadius="8dp"
              android:layout_centerHorizontal="true">
    
            </android.support.design.card.MaterialCardView>
    
          </LinearLayout>
    
        </HorizontalScrollView>
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contributions"/>
    
        <android.support.design.card.MaterialCardView
          app:strokeColor="#FF0000"
          app:strokeWidth="1dp"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:layout_marginRight="5dp"
          android:layout_gravity="bottom"
          app:cardCornerRadius="8dp"
          android:layout_centerHorizontal="true">
    
        </android.support.design.card.MaterialCardView>
    
      </LinearLayout>
    
    </LinearLayout>
</ScrollView>